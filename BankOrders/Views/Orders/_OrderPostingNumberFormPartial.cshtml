@model BankOrders.Models.Orders.OrderPostingNumberFormModel

<div class="row">
    <form asp-action="AddPostingNumber" asp-route-orderId="@Model.OrderId">
        <div class="form-row col-md-12">
            <div class="form-group col-md-5">
                <h4 asp-for="PostingNumber" class="control-label">Posting number:</h4>
            </div>
            <div class="form-group col-md-5">
                <input asp-for="PostingNumber" class="form-control" />
                <span asp-validation-for="PostingNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
