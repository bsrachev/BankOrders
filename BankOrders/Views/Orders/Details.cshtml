@model BankOrders.Models.Orders.OrderDetailListingViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Order №@Html.DisplayFor(model => model.RefNumber)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.System)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.System)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserCreate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserCreate)
        </dd>
    </dl>
</div>

<div>
    <partial name="_OrderDetailFormPartial" model="@(Model.EditDetailId != null ? Model.OrderDetails.First(x => x.OrderDetailId == Model.EditDetailId) : new OrderDetailFormModel { ExchangeRates = Model.ExchangeRates, OrderSystem = Model.System } )" />
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Edit</th>
            <th scope="col">Branch</th>
            @if (Model.System == OrderSystem.Internal)
            {
                <th scope="col">Cost Center</th>
            }
            else
            {
                <th scope="col">Project</th>
            }
            <th scope="col">Reason</th>
            <th scope="col">Account</th>
            <th scope="col">Account Type</th>
            <th scope="col">Sum</th>
            <th scope="col">Currency</th>
            <th scope="col">Sum in BGN</th>
            <th scope="col">Accounting Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            if (Model.EditDetailId == detail.OrderDetailId)
            {
                <tr>
                    <th class="thead-dark" scope="row">
                        <div class="button-holder">
                            <button type="submit" class="btn btn-info" disabled>Edit</button>
                        </div>
                    </th>
                    <td>@detail.Branch</td>
                    @if (Model.System == OrderSystem.Internal)
                    {
                        <td>@detail.CostCenter</td>
                    }
                    else
                    {
                        <td>@detail.Project</td>
                    }
                    <td>@detail.Reason</td>
                    <td>@detail.Account</td>
                    <td>@detail.AccountType</td>
                    <td>@detail.Sum</td>
                    <td>@detail.Currency</td>
                    <td>@detail.SumBGN</td>
                    <td>@detail.AccountingNumber</td>
                </tr>
            }
            else
            {
                <tr>
                    <th scope="row">
                        <div class="button-holder">
                            <a href="/Orders/Details?orderId=@Model.Id&editDetailId=@detail.OrderDetailId" class="btn btn-info">Edit</a>
                        </div>
                    </th>
                    <td>@detail.Branch</td>
                    @if (Model.System == OrderSystem.Internal)
                    {
                        <td>@detail.CostCenter</td>
                    }
                    else
                    {
                        <td>@detail.Project</td>
                    }
                    <td>@detail.Reason</td>
                    <td>@detail.Account</td>
                    <td>@detail.AccountType</td>
                    <td>@detail.Sum</td>
                    <td>@detail.Currency</td>
                    <td>@detail.SumBGN</td>
                    <td>@detail.AccountingNumber</td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model.OrderDetails.Count == 0)
{
    <strong>Order №@Model.RefNumber has no details.</strong>
}

<div class="container-fluid border-top">
    <div class="form-group">
        <br />
        @if (Model.Status == OrderStatus.Draft)
        {
            <a asp-controller="Orders" asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-warning">Send for approval</a>
        }
        else if (Model.Status == OrderStatus.ForApproval)
        {
            <a asp-controller="Orders" asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-warning">Approve order</a>
            <a asp-controller="Orders" asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-warning">Send for correction</a>
        }
        else if (Model.Status == OrderStatus.ForPosting)
        {
            <a asp-controller="Orders" asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-warning">Send for post approval</a>
            <a asp-controller="Orders" asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-warning">Send for correction</a>
        }
        else if (Model.Status == OrderStatus.ForPostingApproval)
        {
            <a asp-controller="Orders" asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-warning">Approve posting</a>
        }
        else if (Model.Status == OrderStatus.Finished)
        {
            <a asp-controller="Orders" asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-warning">Create similar order</a>
        }
        <button type="button" onclick="location.href='@Url.Action("All")'" class="btn btn-dark float-right"> Cancel </button>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
