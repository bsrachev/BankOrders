@model OrderDetailListingViewModel

@{
    ViewData["Title"] = "Details";
}

<div asp-validation-summary="All" class="text-danger"></div>

<div>
    <h4>Order №@Html.DisplayFor(model => model.RefNumber)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.System)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.System)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserCreate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserCreate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>

<div class="form-row">
    <div class="form-group col-md-12">
        <hr />
        <h4>Copy details from template:</h4>
        <select asp-for="TemplateId" class="form-control">
            <option>123</option>
            <option>345</option>
            <option>567</option>
            <option>789</option>
        </select>
        <a asp-controller="Orders" asp-action="SendForPostingApproval" asp-route-id="@Model.Id" class="btn btn-warning">Copy</a>
        <br />
        <h4>or</h4>
    </div>
</div>

<div>
    <partial name="_OrderDetailFormPartial" model="@(Model.EditDetailId != null ? Model.OrderDetails.First(x => x.OrderDetailId == Model.EditDetailId) : new OrderDetailFormModel { ExchangeRates = Model.ExchangeRates, OrderSystem = Model.System } )" />
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Edit</th>
            <th scope="col">Branch</th>
            @if (Model.System == OrderSystem.Internal)
            {
                <th scope="col">Cost Center</th>
            }
            else
            {
                <th scope="col">Project</th>
            }
            <th scope="col">Reason</th>
            <th scope="col">Account</th>
            <th scope="col">Account Type</th>
            <th scope="col">Sum</th>
            <th scope="col">Currency</th>
            <th scope="col">Sum in BGN</th>
            <th scope="col">Accounting Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            if (Model.EditDetailId == detail.OrderDetailId)
            {
                <tr>
                    <th class="thead-dark" scope="row">
                        <div class="button-holder">
                            <button type="submit" class="btn btn-info" disabled>Edit</button>
                        </div>
                    </th>
                    <td>@detail.Branch</td>
                    @if (Model.System == OrderSystem.Internal)
                    {
                        <td>@detail.CostCenter</td>
                    }
                    else
                    {
                        <td>@detail.Project</td>
                    }
                    <td>@detail.Reason</td>
                    <td>@detail.Account</td>
                    <td>@detail.AccountType</td>
                    <td>@detail.Sum</td>
                    <td>@detail.Currency</td>
                    <td>@detail.SumBGN</td>
                    <td>@detail.AccountingNumber</td>
                </tr>
            }
            else
            {
                <tr>
                    <th scope="row">
                        <div class="button-holder">
                            <a href="/Orders/Details?orderId=@Model.Id&editDetailId=@detail.OrderDetailId" class="btn btn-info">Edit</a>
                        </div>
                    </th>
                    <td>@detail.Branch</td>
                    @if (Model.System == OrderSystem.Internal)
                    {
                        <td>@detail.CostCenter</td>
                    }
                    else
                    {
                        <td>@detail.Project</td>
                    }
                    <td>@detail.Reason</td>
                    <td>@detail.Account</td>
                    <td>@detail.AccountType</td>
                    <td>@detail.Sum</td>
                    <td>@detail.Currency</td>
                    <td>@detail.SumBGN</td>
                    <td>@detail.AccountingNumber</td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model.OrderDetails.Count == 0)
{
    <strong>Order №@Model.RefNumber has no details.</strong>
}

<div class="container-fluid border-top">
    <div class="form-group">
        <br />
        @if (Model.Status == OrderStatus.Draft || Model.Status == OrderStatus.ForCorrection)
        {
            <a asp-controller="Orders" asp-action="SendForApproval" asp-route-id="@Model.Id" class="btn btn-warning">Send for approval</a>
        }
        else if (Model.Status == OrderStatus.ForApproval)
        {
            <a asp-controller="Orders" asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-warning">Approve order</a>
            <a asp-controller="Orders" asp-action="ForCorrection" asp-route-id="@Model.Id" class="btn btn-warning">Send for correction</a>
        }
        else if (Model.Status == OrderStatus.ForPosting || Model.Status == OrderStatus.ForPostingCorrection)
        {
            <a asp-controller="Orders" asp-action="SendForPostingApproval" asp-route-id="@Model.Id" class="btn btn-warning">Send for post approval</a>
        }
        else if (Model.Status == OrderStatus.ForPostingApproval)
        {
            <a asp-controller="Orders" asp-action="ApprovePosting" asp-route-id="@Model.Id" class="btn btn-warning">Approve posting</a>
            <a asp-controller="Orders" asp-action="ForPostingCorrection" asp-route-id="@Model.Id" class="btn btn-warning">Send for correction</a>
        }
        <a asp-controller="Orders" asp-action="All" class="btn btn-dark float-right">Cancel</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
