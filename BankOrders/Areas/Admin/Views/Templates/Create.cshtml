@model CreateTemplateFormModel

@{
    ViewData["Title"] = "Create New Template";
}

<h1>Create a new template</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-md-9">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-3 float-right">
                    <label class="control-label">Orderer</label>
                    <input class="form-control" value="@this.User.Identity.Name" disabled>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="System" class="control-label"></label>
                <select asp-for="System" class="form-control">
                    <option>Internal</option>
                    <option>External</option>
                </select>
                <span asp-validation-for="System" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Add Template" class="btn btn-primary"> Add Template </button>
                <a class="btn btn-dark float-right" asp-area="" asp-controller="Templates" asp-action="All">Cancel</a>
            </div>
        </form>
    </div>
</div>

